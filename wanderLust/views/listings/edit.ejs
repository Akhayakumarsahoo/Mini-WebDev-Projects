<% layout("layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Edit your Listing</h3>

            <form method="POST" action="/listings/<%=listing._id %>?_method=PUT">
                <div class="mt-3">
                    <label for="title" class="form-label">Title:</label><br>
                    <input type="text" id="title" name="listing[title]" value="<%=listing.title %>" required
                        class="form-control">
                </div>
                <div class="mt-3">
                    <label for="description" class="form-label">Description:</label><br>
                    <textarea id="description" name="listing[description]" required
                        class="form-control"><%=listing.description%></textarea>
                </div>

                <div class="mt-3">
                    <label for="image" class="form-label">Image URL:</label><br>
                    <input type="url" id="image" name="listing[image]" required class="form-control"
                        value="<%=listing.image%>">
                </div>
                <div class="row mt-3">
                    <div class="col-md-3">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" id="price" name="listing[price]" value="<%=listing.price%>" min="0"
                            required class="form-control">
                    </div>

                    <div class="col-md-6">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text" id="location" name="listing[location]" value="<%=listing.location%>" required
                            class="form-control">
                    </div>

                    <div class="col-md-3">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" id="country" name="listing[country]" value="<%=listing.country%>" required
                            class="form-control">
                    </div>
                </div>
                <button type="submit" class="btn btn-dark add-btn mt-3">SAVE</button>
            </form>
            <br><br>
        </div>
    </div>